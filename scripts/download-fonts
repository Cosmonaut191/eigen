#!/usr/bin/env yarn zx


// Get fonts from eigen s3 bucket
await $`aws s3 cp s3://artsy-citadel/eigen/fonts.tar.gz ./fonts.tar.gz`

// Extract fonts
await $`mkdir -p ./fonts`
await $`tar -xvzf fonts.tar.gz -C ./fonts`

// Android
await $`cp ./fonts/android/* android/app/src/main/assets/fonts`

// iOS
await $`mkdir -p ./Pods/Artsy+UIFonts/Pod/Assets`
await $`cp ./fonts/ios/* Pods/Artsy+UIFonts/Pod/Assets`

// Cleanup
await $`rm -rf ./fonts.tar.gz`
await $`rm -rf ./fonts`
